<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.EasyTravelApplication" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>


    <style name="hint_text" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/cantarell_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="regular_14_text" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/cantarell_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="regular_14_text_bold" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/cantarell_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="regular_20_text_bold" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/cantarell_regular</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="regular_18_text_bold" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/cantarell_regular</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="regular_16_text_bold" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/cantarell_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="regular_12_text" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/cantarell_regular</item>
        <item name="android:textSize">12dp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="InputStyle" parent="Widget.AppCompat.EditText">
        <item name="android:fontFamily">@font/cantarell_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@drawable/border</item>
        <item name="android:padding">15dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/gray</item>
    </style>

    <style name="button" parent="Widget.AppCompat.Button">
        <item name="android:fontFamily">@font/cantarell_bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@drawable/button</item>
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@null</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="ProgressAccent" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorAccent">@color/light_blue_5</item>
    </style>








</resources>